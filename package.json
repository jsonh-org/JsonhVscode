{
  "name": "jsonh-vscode",
  "displayName": "JsonhVscode",
  "description": "Syntax highlighter for JSONH in Visual Studio Code",
  "publisher": "Joyless",
  "repository": {
    "type": "git",
    "url": "https://github.com/jsonh-org/JsonhVscode"
  },
  "version": "2.2.0",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./client/out/extension",
  "scripts": {
    "compile": "tsc -b",
    "watch": "tsc -b -w"
  },
  "contributes": {
    "languages": [
      {
        "id": "jsonh",
        "aliases": ["JSONH", "jsonh"],
        "extensions": [".jsonh"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "jsonh",
        "scopeName": "source.jsonh",
        "path": "./syntaxes/jsonh.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "jsonh",
        "path": "./snippets/jsonh.code-snippets"
      }
    ],
		"configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "jsonhLanguageServer.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        }
      }
    }
  },
  "devDependencies": {
    "@types/node": "^22",
    "typescript": "^5.9.3"
  }
}